{
  "props": [
    {
      "name": "width",
      "desc": "$t('datepicker.api.width')",
      "type": "Number",
      "optionalValue": "",
      "default": "100%",
      "version": ""
    },
    {
      "name": "type",
      "desc": "显示类型",
      "type": "string",
      "optionalValue": ["date", "daterange", "datetimerange", "year", "month", "monthrange"],
      "default": "date",
      "version": ""
    },
    {
      "name": "format",
      "desc": "展示的日期格式",
      "type": "string",
      "optionalValue": "",
      "default": "<strong>date、daterange</strong>: <wbr/>yyyy-MM-dd; <br /> <strong>datetime、datetimerange</strong>: <wbr/>yyyy-MM-dd HH:mm:ss; <br /> <strong>year</strong>: <wbr/>yyyy; <br /><strong>month</strong>: <wbr/>yyyy-MM",
      "version": ""
    },
    {
      "name": "label",
      "desc": "选择器上方的标签",
      "type": "string",
      "optionalValue": "",
      "default": "",
      "version": ""
    },
    {
      "name": "readonly",
      "desc": "是否只读",
      "type": "boolean",
      "optionalValue": "",
      "default": "false",
      "version": ""
    },
    {
      "name": "disabled",
      "desc": "是否禁用",
      "type": "boolean",
      "optionalValue": "",
      "default": "false",
      "version": ""
    },
    {
      "name": "multiple",
      "desc": "是否可以多选，仅在 type = 'date' 下生效",
      "type": "boolean",
      "optionalValue": "",
      "default": "false",
      "version": ""
    },
    {
      "name": "placement",
      "desc": "弹出面板默认的方向",
      "type": "string",
      "optionalValue": [
        "top",
        "top-start",
        "top-end",
        "bottom",
        "bottom-start",
        "bottom-end",
        "left",
        "left-start",
        "left-end",
        "right",
        "right-start",
        "right-end"
      ],
      "default": "bottom-start",
      "version": ""
    },
    {
      "name": "name",
      "desc": "输入框的 name 属性",
      "type": "string",
      "optionalValue": "",
      "default": "",
      "version": ""
    },
    {
      "name": "value",
      "desc": "当前选中的值，当多选或者时间段时为数组",
      "type": ["Date", "Array", "string"],
      "optionalValue": "",
      "default": "",
      "version": ""
    },
    {
      "name": "placeholder",
      "desc": "输入框占位内容",
      "type": "string",
      "optionalValue": "",
      "default": "",
      "version": ""
    },
    {
      "name": "popper-class",
      "desc": "下拉框的类名",
      "type": "string",
      "optionalValue": "",
      "default": "",
      "version": ""
    },
    {
      "name": "append-to-container",
      "desc": "是否将下拉框插入至容器元素中。在下拉框的定位出现问题时，可将该属性设置为 false",
      "type": "boolean",
      "optionalValue": "",
      "default": "true",
      "version": ""
    },
    {
      "name": "get-popup-container",
      "desc": "获取容器元素方法，需要返回 HTMLElement 对象",
      "type": "function():HTMLElement",
      "optionalValue": "",
      "default": "默认返回 document.body",
      "version": ""
    },
    {
      "name": "popper-options",
      "desc": "自定义 popper.js 的配置项，具体配置查看 <a target='_blank' href='https://popper.js.org/docs/v1/#modifiers--codeobjectcode'>popper.js 文档</a>",
      "type": "object",
      "optionalValue": "",
      "default": "",
      "version": ""
    },
    {
      "name": "week-start",
      "desc": "设置周起始日期",
      "type": "number",
      "optionalValue": "0 ~ 6",
      "default": "1",
      "version": ""
    }
  ],
  "events": [
    {
      "name": "update:open",
      "desc": "当面板显示隐藏时触发",
      "signature": "function (open: boolean)",
      "args": ""
    },
    {
      "name": "input",
      "desc": "当前 value 发生改变时触发，当为 range类型 或者 multiple 时为 date[]",
      "signature": "function (value: date / date[])",
      "args": ""
    },
    {
      "name": "pick-range",
      "desc": "当在日期段模式下，用户点击选择时间时触发",
      "signature": "(selection: { from: Date, selecting: boolean, to?: Date })",
      "args": "参数 from 表示起始时间，selecting 表示是否仍在选择中，to 表示结束时间，可为空"
    }
  ]
}
